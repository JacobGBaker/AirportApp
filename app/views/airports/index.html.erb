<h1>Airports</h1>

<% @airports.each do |airport_code| %>
  <% @airport = Airport.new %>
  <% @airport.code = airport_code[:code] %>
  <h2><%= link_to @airport.code, show_url(@airport.code) %></h2>

  <p> <%= @airport.temperature %>&degF </p>
  <% if @airport.delay == 0 %>
  <p>On Time!</p>

  <% elsif @airport.delay < 30 %>
  <p>Delayed</p>

  <% elsif @airport.delay > 30 %>
  <p>Nightmare</p>

  <% end %>
<% end %>
